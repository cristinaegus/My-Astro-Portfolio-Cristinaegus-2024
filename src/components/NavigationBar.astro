---
const links = [
  { href: '/', label: 'Home' },
  { href: '/contactMe', label: 'Contact Me' },
  { href: '/CEcvENG2024.pdf', label: 'Download my CV' },
  { href: 'https://www.linkedin.com/in/cristina-egusquiza-875a4134/', label: 'LinkedIn' },
  { href: 'mailto:egusquizacristina@gmail.com', label: 'Email' },
];

const { pathname } = Astro.url;
const isActive = href =>
  href === pathname || href === pathname.replace(/\/$/, '');
---

<nav class="flex py-4 px-4 justify-between items-center">
  <ul class="flex flex-wrap p-0 m-0">
    {
      links.map(({ href, label }) => (
        <li class="opacity-80 list-none text-[0.95rem]">
          <a
            href={href}
            class={[
              isActive(href) ? 'active-link' : '',
              label === 'Download my CV' ? 'shimmer-button' : '',
              'px-4 py-2 rounded-lg no-underline text-grey-400 hover:text-grey-900',
            ].join(' ')}
          >
            {label}
          </a>
        </li>
      ))
    }
  </ul>
</nav>